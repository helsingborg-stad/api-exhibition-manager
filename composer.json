{
    "name": "helsingborg-stad/api-exhibition-manager",
    "type": "wordpress-plugin",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Thor Brink",
            "email": "thor.brink@helsingborg.se"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "ApiExhibitionManager\\": "source/php/"
        }
    },
    "require": {
        "php": ">=8.2",
        "helsingborg-stad/acf-export-manager": "^1.0.12",
        "helsingborg-stad/wpservice": "^2.0",
        "helsingborg-stad/acfservice": "^1.3"
    },
    "require-dev": {
        "helsingborg-stad/phpcs": "^0.2.2",
        "phpunit/phpunit": "^11.5",
        "php-stubs/wordpress-stubs": "^6.8",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "test": "phpunit --no-coverage --testdox",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-clover .coverage/clover.xml",
        "lint": "vendor/bin/phpcs",
        "lint:changed": "vendor/bin/phpcs-changed origin/main",
        "fix": "vendor/bin/phpcbf",
        "fix:changed": "vendor/bin/phpcbf-changed origin/main",
        "make-pot": "wp i18n make-pot . languages/api-exhibition-manager.pot --exclude=vendor",
        "update-po": "wp i18n update-po languages/api-exhibition-manager.pot languages/api-exhibition-manager-sv_SE.po",
        "make-mo": "wp i18n make-mo languages/api-exhibition-manager-sv_SE.po languages/api-exhibition-manager-sv_SE.mo",
        "phpstan": "vendor/bin/phpstan analyze --memory-limit=512M"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true
        }
    },
    "version": "0.4.1"
}